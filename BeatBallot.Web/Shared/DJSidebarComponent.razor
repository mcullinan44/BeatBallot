@* DJSidebarComponent.razor *@

<div class="dj-sidebar @(IsCollapsed ? "collapsed" : "")">
    <div class="sidebar-header">
        <button class="collapse-btn" @onclick="ToggleCollapse">
            <span class="collapse-icon">@(IsCollapsed ? "▶" : "◀")</span>
        </button>
    </div>

    <nav class="sidebar-nav">
        <div class="nav-section">
            <div class="nav-section">


                <div class="nav-item action-item" @onclick="StartLiveSession">
                    <div class="nav-icon">🎧</div>
                    @if (!IsCollapsed)
                    {
                        <span class="nav-text">Go Live</span>
                    }
                </div>
            </div>
            
            <div class="nav-item @(ActivePage.Contains("playlists") ? "active" : "")"
                 @onclick="@(() => NavigateToPage("/dj/playlists"))">
                <div class="nav-icon">🎵</div>
                @if (!IsCollapsed)
                {
                    <span class="nav-text">Playlists</span>
                    @if (PlaylistCount > 0)
                    {
                        <span class="nav-badge">@PlaylistCount</span>
                    }
                }
            </div>

            <div class="nav-item @(ActivePage.Contains("history") ? "active" : "")"
                 @onclick="@(() => NavigateToPage("/dj/history"))">
                <div class="nav-icon">📊</div>
                @if (!IsCollapsed)
                {
                    <span class="nav-text">History</span>
                    @if (HistoryCount > 0)
                    {
                        <span class="nav-badge">@HistoryCount</span>
                    }
                }
            </div>
        </div>


    </nav>

    @if (!IsCollapsed)
    {
        <div class="sidebar-footer">
            <div class="stats-summary">
                <div class="stat-item">
                    <div class="stat-number">@TotalVotes</div>
                    <div class="stat-label">Total Votes</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">@ActiveSessions</div>
                    <div class="stat-label">Live Sessions</div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public bool IsCollapsed { get; set; } = false;
    [Parameter] public string ActivePage { get; set; } = "playlists";
    [Parameter] public int PlaylistCount { get; set; } = 12;
    [Parameter] public int HistoryCount { get; set; } = 45;
    [Parameter] public int TotalVotes { get; set; } = 1247;
    [Parameter] public int ActiveSessions { get; set; } = 3;

    [Parameter] public EventCallback<bool> OnToggleCollapse { get; set; }
    [Parameter] public EventCallback<string> OnNavigate { get; set; }
    [Parameter] public EventCallback OnCreatePlaylist { get; set; }
    [Parameter] public EventCallback OnStartLiveSession { get; set; }

    private async Task ToggleCollapse()
    {
        IsCollapsed = !IsCollapsed;
        await OnToggleCollapse.InvokeAsync(IsCollapsed);
    }

    private async Task NavigateToPage(string page)
    {
        await OnNavigate.InvokeAsync(page);
    }

    private async Task CreateNewPlaylist()
    {
        await OnCreatePlaylist.InvokeAsync();
    }

    private async Task StartLiveSession()
    {
        await OnStartLiveSession.InvokeAsync();
    }
}

<style>
    .dj-sidebar {
        background: linear-gradient(180deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.9) 100%);
        backdrop-filter: blur(20px);
        border-right: 1px solid rgba(255,255,255,0.1);
        height: calc(100vh - 70px);
        width: 280px;
        position: sticky;
        top: 70px;
        display: flex;
        flex-direction: column;
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .dj-sidebar.collapsed {
            width: 70px;
        }

    .sidebar-header {
        padding: 20px;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        display: flex;
        justify-content: flex-end;
    }

    .collapse-btn {
        background: rgba(255,255,255,0.1);
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 8px;
        padding: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        color: white;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .collapse-btn:hover {
            background: rgba(255,255,255,0.2);
            transform: scale(1.05);
        }

    .collapse-icon {
        font-size: 0.9em;
        transition: transform 0.3s ease;
    }

    .sidebar-nav {
        flex: 1;
        padding: 20px 0;
        overflow-y: auto;
    }

    .nav-section {
        margin-bottom: 30px;
        padding: 0 20px;
    }

    .section-title {
        color: rgba(255,255,255,0.6);
        font-size: 0.8em;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 15px;
        padding-left: 10px;
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 12px 15px;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-bottom: 5px;
        color: rgba(255,255,255,0.8);
        position: relative;
    }

        .nav-item:hover {
            background: rgba(255,255,255,0.1);
            color: white;
            transform: translateX(5px);
        }

        .nav-item.active {
            background: linear-gradient(45deg, rgba(231,76,60,0.2), rgba(243,156,18,0.2));
            border: 1px solid rgba(243,156,18,0.3);
            color: #f39c12;
            transform: translateX(5px);
        }

            .nav-item.active .nav-icon {
                transform: scale(1.1);
            }

        .nav-item.action-item {
            border: 1px solid rgba(255,255,255,0.2);
            background: rgba(255,255,255,0.05);
        }

            .nav-item.action-item:hover {
                background: linear-gradient(45deg, rgba(46,204,113,0.2), rgba(52,152,219,0.2));
                border-color: rgba(46,204,113,0.3);
                color: #2ecc71;
            }

    .nav-icon {
        font-size: 1.3em;
        width: 24px;
        text-align: center;
        flex-shrink: 0;
        transition: all 0.3s ease;
    }

    .nav-text {
        font-weight: 500;
        font-size: 0.95em;
        flex: 1;
    }

    .nav-badge {
        background: linear-gradient(45deg, #e74c3c, #f39c12);
        color: white;
        font-size: 0.75em;
        font-weight: bold;
        padding: 4px 8px;
        border-radius: 12px;
        min-width: 20px;
        text-align: center;
    }

    .sidebar-footer {
        padding: 20px;
        border-top: 1px solid rgba(255,255,255,0.1);
        background: rgba(0,0,0,0.3);
    }

    .stats-summary {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    .stat-item {
        text-align: center;
        padding: 10px;
        background: rgba(255,255,255,0.05);
        border-radius: 8px;
        border: 1px solid rgba(255,255,255,0.1);
    }

    .stat-number {
        color: #f39c12;
        font-size: 1.2em;
        font-weight: bold;
        margin-bottom: 4px;
    }

    .stat-label {
        color: rgba(255,255,255,0.7);
        font-size: 0.75em;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Collapsed state adjustments */
    .dj-sidebar.collapsed .nav-section {
        padding: 0 10px;
    }

    .dj-sidebar.collapsed .nav-item {
        justify-content: center;
        gap: 0;
        padding: 12px;
    }

        .dj-sidebar.collapsed .nav-item:hover {
            transform: scale(1.1);
        }

        .dj-sidebar.collapsed .nav-item.active {
            transform: scale(1.1);
        }

    /* Custom scrollbar */
    .sidebar-nav::-webkit-scrollbar {
        width: 4px;
    }

    .sidebar-nav::-webkit-scrollbar-track {
        background: rgba(255,255,255,0.1);
        border-radius: 2px;
    }

    .sidebar-nav::-webkit-scrollbar-thumb {
        background: linear-gradient(45deg, #e74c3c, #f39c12);
        border-radius: 2px;
    }
</style>