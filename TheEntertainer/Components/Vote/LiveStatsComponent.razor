@* LiveStatsComponent.razor *@

<div class="stats">
    <div class="stats-title">Live Stats</div>
    <div class="stats-grid">
        <div class="stat-item">
            <div class="stat-number">@TotalVotes</div>
            <div class="stat-label">Total Votes</div>
        </div>
        <div class="stat-item">
            <div class="stat-number">@ActiveVoters</div>
            <div class="stat-label">Active Voters</div>
        </div>
        <div class="stat-item">
            <div class="stat-number">@SongsPlayed</div>
            <div class="stat-label">Songs Played</div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int TotalVotes { get; set; } = 87;
    [Parameter] public int ActiveVoters { get; set; } = 24;
    [Parameter] public int SongsPlayed { get; set; } = 156;
}

<style>
    .stats {
        background: rgba(0,0,0,0.6);
        padding: 15px 20px;
        color: white;
        text-align: center;
        margin-top: 20px;
    }

    .stats-title {
        font-weight: bold;
        margin-bottom: 10px;
        font-size: 1.1em;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 15px;
        margin-top: 10px;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 1.5em;
        font-weight: bold;
        color: #f39c12;
    }

    .stat-label {
        font-size: 0.8em;
        color: rgba(255,255,255,0.7);
        margin-top: 5px;
    }
</style>